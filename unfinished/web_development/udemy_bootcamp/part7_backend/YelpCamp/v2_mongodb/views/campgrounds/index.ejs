<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>View our recommended campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Camp</a>
    </p>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Most Popular</h3>
    </div>
  </div>
  <div class="row" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach((camp) =>{ %>
    <div class="col-sm-6 col-lg-4">
      <div class="thumbnail">
        <img src="<%= camp.image%>">
        <div class="caption">
          <h4><%= camp.name %></h4>
          <p>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-info">More Info</a>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include("../partials/footer") %>