<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add a Campsite</h1>
    <div style="width: 30%; margin: 3rem auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" placeholder="camp name" name="campName">
        </div>
        <div class="form-group">
          <input class="form-control" placeholder="image url" name="image">
        </div>
        <div class="form-group">
          <input class="form-control" placeholder="short description" name="desc">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit">
        </div>
      </form>
      <p>Go back to our <a href="/campgrounds">camps page</a></p>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>