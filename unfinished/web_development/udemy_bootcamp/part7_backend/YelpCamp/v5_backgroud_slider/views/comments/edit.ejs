<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit your Comment</h1>
    <div style="width: 30%; margin: 3rem auto;">
      <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Save Changes</button>
        </div>
      </form>
      <a class="btn btn-warning" href="/campgrounds/<%= camp_id %>">Discard Changes</a>
      <form class="deleteBtnForm" action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
        <span class="form-group">
          <button class="btn btn-danger">Delete Comment</button>
        </span>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>