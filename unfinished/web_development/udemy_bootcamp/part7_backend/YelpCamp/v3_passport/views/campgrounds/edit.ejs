<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit "<%= camp.name %>"</h1>
    <div style="width: 30%; margin: 3rem auto;">
      <form action="/campgrounds" method="PUT">
        <div class="form-group">
          <input class="form-control" value="<%= camp.name %>" name="campName">
        </div>
        <div class="form-group">
          <input class="form-control" value="<%= camp.image %>" name="image">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="desc"><%= camp.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Save Changes</button>
        </div>
      </form>
      <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>">Discard Changes</a>
      <form class="pull-right" action="/campgrounds" method="DELETE">
        <span class="form-group">
          <button class="btn btn-danger">Delete Camp</button>
        </span>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>