<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Comment on "<%= camp.name%>"</h1>
    <div style="width: 30%; margin: 3rem auto;">
      <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" placeholder="author" name="comment[author]">
        </div>
        <div class="form-group">
          <textarea class="form-control" placeholder="comment" name="comment[text]"></textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit">
        </div>
      </form>
      <p>Go back to <a href="/campgrounds/<%= camp._id %>"><%= camp.name %></a></p>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>