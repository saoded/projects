<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit "<%= camp.name %>"</h1>
    <div style="width: 30%; margin: 3rem auto;">
      <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" value="<%= camp.name %>" name="campground[name]">
        </div>
        <div class="form-group">
          <input class="form-control" value="<%= camp.image %>" name="campground[image]">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="campground[description]"><%= camp.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Save Changes</button>
        </div>
      </form>
      <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>">Discard Changes</a>
      <form class="deleteBtnForm" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
        <span class="form-group">
          <button class="btn btn-danger">Delete Camp</button>
        </span>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>