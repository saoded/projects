<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>
        </div>
      </p>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= camp.image %>">
        <div class="caption">
          <h4 class="pull-right">$<%= camp.price %>/night</h4>
          <h4><a><%= camp.name %></a></h4>
          <% if(currentUser && camp.creator.id.equals(currentUser.id)){ %>
          <a class="btn btn-success pull-right"
          href="/campgrounds/<%= camp._id %>/edit">
            edit
          </a>
          <% } %>
          <p><em>submitted by <a><%= camp.creator.username %></a></em></p>
          <p><%- camp.description %></p>
        </div>
        <div>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a href="/campgrounds/<%= camp._id %>/comments/new" class="btn btn-info">Leave a Review</a>
        </div>
        <hr>
        <% camp.comments.forEach((comment) =>{ %>
        <div class="row">
          <div class="col-md-12">
            <span class="pull-right">10 days ago</span>
            <strong><%= comment.author.username %></strong>
            <% if(currentUser && comment.author.id.equals(currentUser.id)){ %>
            <a class="btn btn-xs btn-success" href="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/edit">
              edit
            </a>
            <% } %>
            <p>
              <%- comment.text %>
            </p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>